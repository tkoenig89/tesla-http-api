{
  "name": "tesla-http-api-dev",
  "image": "mcr.microsoft.com/devcontainers/go:1-1.23",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "postCreateCommand": "go mod download",
  "remoteUser": "vscode",
  "updateContentCommand": "go build ./cmd/tesla-http-api || true",
  "portsAttributes": {
    "8080": {
      "label": "tesla-http-api",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [8080],
  "mounts": [
    "source=${localWorkspaceFolder}/refresh-token,target=/workspaces/tesla-http-api/refresh-token,type=bind,consistency=cached"
  ]
}
